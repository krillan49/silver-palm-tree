<turbo-frame id="podcast_frame">
  <div class="row row-cols-1 row-cols-md-3 g-4">
    <% podcasts.each do |podcast| %>
      <div class="col">
        <div class="card mb-4 h-100">
          <% if podcast.photo.attached? %>
            <%= image_tag podcast.photo, class: "card-img-top" %>
          <% else %>
            <% photo = "https://mir-s3-cdn-cf.behance.net/project_modules/max_1200/9abc28136491393.61fa8bcfee8ce.png" %>
            <%= image_tag photo, class: "card-img-top" %>
          <% end %>

          <div class="card-body">
            <h5 class="card-title">
              <%= link_to podcast.title, podcast,
                  class: "text-decoration-none",
                  data: { turbo_frame: 'podcasts_list' }
              %>
            </h5>
            <p class="card-text"><%= podcast.description %></p>
            <p class="card-text fs-5 display-2">User_id: <%= podcast.user_id %></p>
          </div>

          <div class="card-footer">
            <small class="text-body-secondary"><%= podcast.created_at %></small>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</turbo-frame>
