<div class="container">
  <h2>Podcast: <%= @podcast.title %></h2>

  <div class="form-group">
    <%= label_tag :title, "Название Podcast" %>
    <%= @podcast.title %>
  </div>

  <div class="form-group">
    <%= label_tag :description, "Описание Podcast" %>
    <%= @podcast.description %>
  </div>

  <%= link_to "Редактировать Podcast", edit_podcast_path(@podcast), class: "btn btn-secondary" %>
  <%= link_to "Удалить Podcast", podcast_path(@podcast), method: :delete, data: { confirm: "Вы уверены?" }, class: "btn btn-danger" %>
</div>
